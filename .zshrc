alias sail='[ -f sail ] && bash sail || bash vendor/bin/sail'
alias reseed='[ -f sail ] && bash sail artisan migrate:fresh --seed || bash vendor/bin/sail artisan migrate:fresh --seed'
alias logs='[ -f sail ] && bash sail logs -f || bash vendor/bin/sail logs -f'
alias reindex='[ -f .index.sh ] && bash .index.sh'
alias ziggy='sail artisan ziggy:generate'
alias ide-helper='sail artisan ide-helper:generate && sail artisan ide-helper:models'
alias clear-cache='sail artisan optimize:clear && sail artisan config:clear'
alias startup='sail up -d && reindex && sail npm run dev'
alias vapor='./vendor/bin/vapor'
alias dev='sail npm run dev'
alias build='sail npm run build'
alias deploy='./vendor/bin/vapor deploy'
